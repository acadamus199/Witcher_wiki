	*{
		margin: 0px;
		padding: 0px;
	}
	#logo{
		height: 200px;
		width: auto;
		border: none;
		float: left;
		cursor: pointer;
		transition: 1s;
	}
	#logo:hover{
		height: 210px;
		width: auto;
	}
	canvas{
		float: left;
		cursor: pointer;
		margin-top: 30px;
		border: 2px solid #750c0c;
		border-radius: 10px;
		padding: 1%;
		background-image: url("obsidian.jpg");
		transition: 2s;
		transform-style: preserve-3d;
	}
	canvas:hover{
		animation: shake 1s infinite;
	}
	@keyframes shake{
		0%{transform: rotateZ(0deg);}
		50%{transform: rotateZ(10deg);}
		75%{transform: rotateZ(-10deg);}
	}
	#aard{
		transform: rotateZ(180deg);
		width: 200px;
		transition: 0.5s;
	}
	#aard:hover{
		animation: none;
		width: 220px;
	}
	#aksi{
		width: 200px;
		transition: 0.5s;
	}
	#aksi:hover{
		animation: none;
		width: 220px;
	}
	header{
		height: 300px;
		background-image: url('geralt.jpg');
		background-repeat: no-repeat;
		background-size: cover;
		background-position: relative;
		background-attachment: fixed;
		border: 2px solid black;
	}
	body{
		background: rgb(179,16,16);
		background: linear-gradient(149deg, rgba(179,16,16,1) 11%, rgba(80,0,0,1) 46%, rgba(17,17,14,1) 84%);
	}
	div{
		float: right;
		border: 2px solid red;
		background-color: #991a1a;
	}
	#box{
		display: none;
		height: 90%;
		width: 30%;
		margin-top: 10px;
		margin-right: 10px;
		margin-bottom: 10px;
	}
	#box2{
		display: none;
		position: relative;
		top: 10%;
		right: 5%;
		width: auto;
		height: auto;
		min-height: 50%;
		min-width: 30%;
		max-width: 50%;
		border-radius: 20px 0px 20px 0px;
	}
	p{
		color: white;
		font-size: 24px;
		line-height: 35px;
		margin: 20px;
		cursor: default;
	}
	img{
		margin-top: 40px;
		border: 2px solid white;
		border-radius: 20px 0px 20px 0px;
	}
